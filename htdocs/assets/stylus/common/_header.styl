#header
  background-color #eeeeee
  .headerInr
    max-width 1200px
    margin 0 auto
  .head
    display flex
    justify-content space-between
  .logo
    display block
    width 200px
    background-color #dddddd
  ul.sub
    display flex
    px(14)
    li
      a
        display block
        padding 10px
  nav
    position relative
    ul
      display flex
      justify-content space-between
			li
				a
					display block
					padding 20px
				.sub
					display none
					visibility hidden
					position absolute
					z-index -1
					opacity 0
					left 0
					right 0
					top 100%
					background-color #dddddd
					transition()
					ul
						justify-content flex-start
						position relative
						&:before
							content ""
							position absolute
							z-index -1
							left -100%
							right -100%
							top 0
							bottom 0
							background-color #dddddd
							display block
				&:hover
					.sub
						display block
						visibility visible
						z-index 2
						opacity 1
