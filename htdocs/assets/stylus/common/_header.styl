#header
	background-color #eeeeee
	position fixed
	z-index 10
	left 0
	right 0
	top 0
	html.menuOpen &
		+sp()
			z-index 2
	.headerInr
		max-width 1200px
		margin 0 auto
		position relative
		+sp()
			position static
	.head
		display flex
		justify-content space-between
	.logo
		display block
		width 200px
		background-color #dddddd
		height 48px
	.navWrap
		+sp()
			position fixed
			z-index -1
			left 0
			right 0
			top 48px
			bottom 0
			overflow-y auto
			opacity 0
			visibility hidden
			background-color #ffffff
			transition()
			html.menuOpen &
				opacity 1
				visibility visible
				z-index 100
	ul.sub
		display flex
		position absolute
		top 0
		right 0
		list-style-none()
		+sp()
			display block
			position relative
		px(14)
		li
			list-style none
			a
				display block
				padding 10px
	nav
		position relative
		ul
			display flex
			justify-content space-between
			list-style-none()
			+sp()
				display block
		li
			a
				display block
				padding 20px
			.sub
				display none
				visibility hidden
				position absolute
				z-index -1
				opacity 0
				left 0
				right 0
				top 100%
				background-color #dddddd
				transition()
				ul
					justify-content flex-start
					position relative
					&:before
						content ""
						position absolute
						z-index -1
						left -100%
						right -100%
						top 0
						bottom 0
						background-color #dddddd
						display block
			&:hover
				.sub
					display block
					visibility visible
					z-index 2
					opacity 1

	.menu
		position absolute
		right 5px
		top 4px
		display none
		justify-content center
		align-items center
		width 40px
		height 40px
		+sp()
			display flex
		div
			width 30px
			height 1px
			background-color #000000
			position relative
			transition()
			html.menuOpen &
				background-color transparent
			&:before
				content ""
				display block
				width 30px
				height 1px
				background-color #000000
				position relative
				top -11px
				transition()
				html.menuOpen &
					transform rotate(-135deg)
					top 0
			&:after
				content ""
				display block
				width 30px
				height 1px
				background-color #000000
				position relative
				top 10px
				transition()
				html.menuOpen &
					transform rotate(135deg)
					top 0


