#footer
	background-color #eeeeee
	padding 20px 3%
	position relative
	.footerInr
		max-width 1200px
		margin 0 auto
	ul
		display flex
		justify-content center
		border-left 1px solid #dddddd
		px(14)
		list-style-none()
		+sp()
			px(10)
		li
			padding 2px 10px
			border-right 1px solid #dddddd
	.copyright
		margin-top 30px
		text-align center
		px(12)
		
	.page-top
		display flex
		justify-content center
		align-items center
		width 40px
		height 40px
		position absolute
		right 20px
		top -60px
		bottom auto
		&:before
			content ""
			display block
			width 20px
			height 20px
			border-top 2px solid #000000
			border-left 2px solid #000000
			transform rotate(45deg)

		html.page-top-fixed &
			position fixed
			top auto
			bottom 20px
		html.page-top-foot &
			position absolute
			right 20px
			top -60px
			bottom auto
