form
	display block
	margin-bottom 15px

	label
		display inline-block
		margin-right 15px
		position relative
		overflow hidden
		&:hover
			transition()
			opacity 0.7
		input[type="radio"]
			position absolute
			left -20px
			top 0
		input[type="radio"] + span
			position relative
			display inline-block
			margin-right 5px
			vertical-align sub
			width 20px
			height 20px
			border-radius 50%
			border 1px solid #cccccc
		input[type="radio"]:checked + span:before
			content ""
			display block
			width 12px
			height 12px
			border-radius 50%
			background-color #000000
			position absolute
			left 50%
			top 50%
			transform translate(-50%,-50%)

		input[type="checkbox"]
			position absolute
			left -20px
			top 0
		input[type="checkbox"] + span
			position relative
			display inline-block
			margin-right 5px
			vertical-align sub
			width 20px
			height 20px
			border-radius 3px
			border 1px solid #cccccc
		input[type="checkbox"]:checked + span:before
			content ""
			display block
			width 6px
			height 12px
			border-right 2px solid #000000
			border-bottom 2px solid #000000
			position absolute
			left 50%
			top 40%
			transform translate(-50%,-50%) rotate(45deg)

	button[type="button"]
	button[type="submit"]
		margin 0 20px
		padding 10px 30px
		border-radius 3px
		color #ffffff
		bold()

	button[type="button"]
		background-color #aaaaaa
	button[type="submit"]
		background-color navy

fieldset
	display flex
	margin-bottom 25px
	padding 0
	border none
	+sp()
		display block
	> div
		&:first-child
			width 20%
			bold()
			+sp()
				width auto
		&:nth-child(2)
			width 80%
			+sp()
				width auto

input[type="text"],
input[type="email"],
input[type="password"]
	border 1px solid #cccccc
	border-radius 3px
	px(16)
	padding 5px 10px


.btn-area
	display flex
	justify-content center

